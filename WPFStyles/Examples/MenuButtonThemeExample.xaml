<UserControl x:Class="WPFStyles.Examples.MenuButtonThemeExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFStyles.Examples"
             Background="{DynamicResource MaterialDesignPaper}"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <RadioButton Content="Menu Option 1"
                         IsChecked="True"
                         Style="{StaticResource MenuButtonTheme}" />

            <RadioButton Content="Menu Option 2"
                         Style="{StaticResource MenuButtonTheme}" />

            <RadioButton Content="Menu Option 3"
                         Style="{StaticResource MenuButtonTheme}" />

            <RadioButton Content="Menu Option 4"
                         Style="{StaticResource MenuButtonTheme}" />
        </StackPanel>
    </Grid>
</UserControl>
